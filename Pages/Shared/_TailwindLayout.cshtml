<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - LearnFromAI</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans">
    <div class="container mx-auto px-4 py-8">
        <header class="mb-8">
            <h1 class="text-3xl font-bold text-center">@ViewData["Title"]</h1>
        </header>

        <div class="flex flex-col md:flex-row gap-8">
            <!-- Sidebar -->
            <nav class="w-full md:w-1/4 bg-white p-4 rounded-lg shadow">
                <h2 class="text-xl font-semibold mb-4">Navigation</h2>
                <ul class="space-y-2">
                    <li><a class="text-blue-600 hover:underline" asp-area="" asp-page="/Index">Home</a></li>
                    <li><a class="text-blue-600 hover:underline" asp-area="" asp-page="/Privacy">Privacy</a></li>
                    <!-- Add more navigation items as needed -->
                </ul>
            </nav>

            <!-- Main Content -->
            <main class="w-full md:w-3/4 space-y-8">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="mt-8 border-t border-gray-300 py-4">
        <div class="container mx-auto px-4 text-center text-gray-600">
            &copy; @DateTime.Now.Year - LearnFromAI - <a asp-area="" asp-page="/Privacy" class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
