@page "{id:int}"
@model LearnFromAI.Web.Pages.ExerciseModel
@{
    ViewData["Title"] = Model.Exercise.Headline;
}

<style>
    #tableOfContents a {
        text-decoration: none;
    }

    #tableOfContents .active>a {
        font-weight: bold;
    }

    #tableOfContents .list-group-item.active {
        background-color: inherit;
        border-color: rgba(0, 0, 0, .125);
    }
</style>

<div class="container-fluid">
    <div class="row">
        <!-- Table of Contents -->
        <div class="col-md-3">
            @await Html.PartialAsync("_TableOfContents", Model.Exercise.Subject.CourseId)
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">@Model.Exercise.Headline</h2>
                    <p class="card-text">@Html.Raw(Model.Exercise.Content)</p>
                </div>
            </div>
        </div>
    </div>
</div>
