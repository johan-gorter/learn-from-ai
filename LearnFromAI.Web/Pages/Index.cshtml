@page
@model LearnFromAI.Web.Pages.IndexModel
@{
  ViewData["Title"] = "Learn From AI - Courses";
}

<div class="container">
  <h1 class="display-4 text-center mb-4">Welcome to Learn From AI</h1>
  <p class="lead text-center mb-5">Explore our courses and start learning today!</p>

  <div class="row">
    @foreach (var course in Model.Courses)
    {
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title">@course.Title</h5>
            <p class="card-text">@course.Content</p>
          </div>
          <div class="card-footer">
            <a asp-page-handler="StartCourse" asp-route-id="@course.Id" class="btn btn-primary">Start Course</a>
          </div>
        </div>
      </div>
    }
  </div>
</div>
