@page
@model IndexModel
@inject ICourseService CourseService
@{
    ViewData["Title"] = "Home page";
    var courses = await CourseService.GetCoursesAsync();
}

<div class="container mx-auto">
    <h2 class="text-3xl font-bold mb-6">Available Courses</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var course in courses)
        {
            <div class="bg-white rounded-lg shadow-md p-6">
                <h3 class="text-xl font-semibold mb-2">@course.Title</h3>
                <p class="text-gray-600 mb-4">@course.Content.Substring(0, Math.Min(100, course.Content.Length))...</p>
                <a href="/Course/@course.Id" class="bg-primary text-white px-4 py-2 rounded hover:bg-opacity-90 transition-colors">
                    Start Course
                </a>
            </div>
        }
    </div>
</div>
