@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="space-y-8">
    <h2 class="text-3xl font-bold text-primary">Available Courses</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @foreach (var course in Model.Courses)
        {
            <div class="bg-white p-6 rounded shadow hover:shadow-lg transition-shadow">
                <h3 class="text-xl font-bold mb-2 text-primary">@course.Title</h3>
                <p class="text-gray-600 mb-4">@course.Content.Substring(0, Math.Min(100, course.Content.Length))...</p>
                <a href="/Course/@course.Id" class="bg-secondary hover:bg-red-600 text-white px-4 py-2 rounded inline-block">Start Course</a>
            </div>
        }
    </div>
</div>
