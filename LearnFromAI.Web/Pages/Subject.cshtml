@page "{id:int}"
@model LearnFromAI.Web.Pages.SubjectModel
@{
  ViewData["Title"] = Model.Subject.Headline;
}

<div class="flex flex-col md:flex-row gap-8 mb-16">
  <aside class="md:w-1/4 bg-white p-4 rounded shadow">
    <partial name="_TableOfContents" model="@((Model.Subject.CourseId, (int?)Model.Subject.Id, (int?)null))" />
  </aside>

  <section class="md:w-3/4 space-y-8">
    <div class="bg-white p-6 rounded shadow">
      <div
        class="prose prose-lg max-w-none prose-headings:text-primary prose-a:text-secondary hover:prose-a:text-secondary-dark prose-strong:text-primary prose-code:text-secondary prose-pre:bg-gray-100 prose-pre:text-gray-800">
        @Html.Raw(Model.Subject.Content)
      </div>
    </div>
  </section>
</div>

@section Footer {
  <footer class="fixed bottom-0 left-0 right-0 bg-primary text-white p-4">
    <div class="container mx-auto flex justify-between items-center">
      <div>
        <a id="prevBtn" class="bg-secondary hover:bg-red-600 px-4 py-2 rounded">Previous</a>
      </div>
      <div class="ml-auto">
        <a id="nextBtn" class="bg-secondary hover:bg-red-600 px-4 py-2 rounded">Next</a>
      </div>
    </div>
  </footer>
}

@section Scripts {
  <script>
    // TODO: Implement navigation logic for previous and next buttons
  </script>
}
