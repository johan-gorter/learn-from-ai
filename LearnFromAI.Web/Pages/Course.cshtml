@page "{id:int}"
@model CourseModel
@{
    ViewData["Title"] = Model.Course.Title;
}

<div class="space-y-8">
    <h2 class="text-3xl font-bold text-primary">@Model.Course.Title</h2>
    <p class="text-gray-600">@Model.Course.Content</p>

    <h3 class="text-2xl font-bold text-primary mt-8">Subjects</h3>
    <ul class="space-y-4">
        @foreach (var subject in Model.Course.Subjects.OrderBy(s => s.Order))
        {
            <li>
                <h4 class="text-xl font-semibold text-primary">@subject.Headline</h4>
                <ul class="pl-6 mt-2 space-y-2">
                    @foreach (var exercise in subject.Exercises.OrderBy(e => e.Order))
                    {
                        <li>
                            <a href="/Exercise/@exercise.Id" class="text-secondary hover:underline">@exercise.Headline</a>
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>
