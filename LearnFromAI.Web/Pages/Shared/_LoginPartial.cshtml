@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <span class="font-semibold mr-4">
        <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="hover:underline">
            @User.Identity.Name
        </a>
    </span>
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button type="submit" class="bg-secondary hover:bg-red-600 px-4 py-2 rounded text-white">Logout</button>
    </form>
}
else
{
    <a asp-area="Identity" asp-page="/Account/Register" class="text-white hover:underline mr-4">Register</a>
    <a asp-area="Identity" asp-page="/Account/Login" class="bg-secondary hover:bg-red-600 px-4 py-2 rounded text-white">Login</a>
}
