@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="flex items-center space-x-4">
    @if (SignInManager.IsSignedIn(User))
    {
        <a href="/Identity/Account/Manage" class="text-white hover:text-accent transition-colors">@User.Identity.Name</a>
        <form action="/Identity/Account/Logout?returnUrl=@Url.Page("/", new { area = "" })" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="bg-secondary hover:bg-red-600 text-white px-4 py-2 rounded transition-colors">Logout</button>
        </form>
    }
    else
    {
        <a href="/Identity/Account/Register" class="text-white hover:text-accent transition-colors">Register</a>
        <a href="/Identity/Account/Login" class="bg-secondary hover:bg-red-600 text-white px-4 py-2 rounded transition-colors">Login</a>
    }
</div>
