<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>@ViewData["Title"] - LearnFromAI</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            'techorama-blue': '#4a6da7',
            'techorama-red': '#e74c3c',
            'techorama-yellow': '#f1c40f',
            'techorama-pink': '#f8d0cb',
          }
        }
      }
    }
  </script>
</head>

<body class="bg-techorama-pink min-h-screen flex flex-col">
  <header class="bg-techorama-blue text-white p-4">
    <nav class="container mx-auto flex justify-between items-center">
      <a class="text-2xl font-bold" asp-area="" asp-page="/Index">LearnFromAI</a>
      <div class="flex items-center space-x-4">
        <partial name="_LoginPartial" />
      </div>
    </nav>
  </header>

  <main class="flex-grow container mx-auto p-4 md:p-8">
    @RenderBody()
  </main>

  <footer class="bg-techorama-blue text-white p-4">
    <div class="container mx-auto text-center">
      &copy; 2024 - LearnFromAI - <a class="hover:text-techorama-yellow" asp-area="" asp-page="/Privacy">Privacy</a>
    </div>
  </footer>

  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
